@*CascadingAuthenticationState and AuthorizeRouteView 
    is required for AuthenticationState to cascade
    to all components parameters of type Task<AuthenticationState> 
    with the attribute [CascadingParameter]*@

<CascadingAuthenticationState>
    <Router AppAssembly="@typeof(Program).Assembly">
        <Found Context="routeData">
            <AuthorizeRouteView RouteData="@routeData" DefaultLayout="@typeof(MainLayout)">
                <NotAuthorized>
                    <h1 class="@MdcTypography.H4">Access denied</h1>
                    <p>Please register and/or login to access this page.</p>
                </NotAuthorized>
                <Authorizing>
                    Wait...
                </Authorizing>
            </AuthorizeRouteView>
        </Found>
        <NotFound>
            <LayoutView Layout="@typeof(MainLayout)">
                <p>Sorry, there's nothing at this address.</p>
            </LayoutView>
        </NotFound>
    </Router>
</CascadingAuthenticationState>
